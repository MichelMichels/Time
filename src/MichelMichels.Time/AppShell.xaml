<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MichelMichels.Time.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MichelMichels.Time.Views"
    Title="MichelMichels.Time"
    Shell.NavBarIsVisible="False">

    <FlyoutItem Title="Time">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" Route="Main" />
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Settings">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" Route="Settings" />
        </Tab>
    </FlyoutItem>
</Shell>
